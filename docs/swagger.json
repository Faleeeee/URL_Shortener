                "click_count": {
                    "type": "integer"
                },
                "created_at": {
                    "type": "string"
                },
                "original_url": {
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                },
                "user_id": {
                    "type": "integer"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
